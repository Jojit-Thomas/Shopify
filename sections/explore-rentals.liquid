<div class="container--large container--vertical-space remove-empty-space">
  <div class="explore-rentals">
    <h2 class="h2">{{ section.settings.title }}</h2>
    <div class="explore-rentals__blocks">
      {% for block in section.blocks %}
        <a class="rental-block" href="{{ block.settings.link }}">
          <div class="card__image rental-block__img" aria-hidden="true" style="padding-top: 66.66%;">
            {%- unless block.settings.image == blank -%}
              {%- capture sizes -%}
                sizes="calc(40vh * {{ block.settings.image.aspect_ratio }})"
              {%- endcapture -%}

              {%- liquid
                
                render 'lazy-image', image: block.settings.image, type: 'background', alt: block.settings.address, sizes: sizes

              -%}

            {%- else -%}
              {{ 'image' | placeholder_svg_tag }}
            {%- endunless -%}
          </div>
          <span class="rental-block__txt">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M5.25 21.75H18.75" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12 12.75C13.6569 12.75 15 11.4069 15 9.75C15 8.09315 13.6569 6.75 12 6.75C10.3431 6.75 9 8.09315 9 9.75C9 11.4069 10.3431 12.75 12 12.75Z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M19.5 9.75C19.5 16.5 12 21.75 12 21.75C12 21.75 4.5 16.5 4.5 9.75C4.5 7.76088 5.29018 5.85322 6.6967 4.4467C8.10322 3.04018 10.0109 2.25 12 2.25C13.9891 2.25 15.8968 3.04018 17.3033 4.4467C18.7098 5.85322 19.5 7.76088 19.5 9.75V9.75Z" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>{{ block.settings.address }}</span>
          </span>
        </a>
      {% endfor %}
    </div>
    <a href="{{ section.settings.btn_link }}" class="button button--large button--outline button--arrow">
      {{ section.settings.btn_text }}
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="25" viewBox="0 0 24 25" fill="none">
        <path d="M7 17.5L17 7.5" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M7 7.5H17V17.5" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </a>
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.local-extra-words.sections.image-section.name",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title"
      },
      {
        "id": "btn_text",
        "type": "text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "Button Link"
      }
    ],    
    "blocks": [
      {
        "type": "block",
        "name": "Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "address",
            "label": "Address"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Explore rentals"
      }
    ]
  }
{% endschema %}